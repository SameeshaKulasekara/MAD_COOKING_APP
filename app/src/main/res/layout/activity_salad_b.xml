<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/white">
<!--    tools:context=".JuiceRecipe1">-->

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="220dp"
        android:layout_height="139dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/salad_icon" />

    <TextView
        android:id="@+id/tv_01"
        android:layout_width="178dp"
        android:layout_height="114dp"
        android:layout_marginBottom="8dp"
        android:text="Warm chicken and mango salad with passionfruit dressing"
        android:textColor="#294013"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <TextView
        android:id="@+id/tv_02"
        android:layout_width="412dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        android:text="Warm chicken and mango salad with passionfruit dressing
Specially for dinner table and parties.
this will help for people who follow diet plan"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <TextView
        android:id="@+id/tv_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Ingredients"
        android:textColor="#6E6D06"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_02" />

    <TextView
        android:id="@+id/tv_04"
        android:layout_width="404dp"
        android:layout_height="101dp"
        android:layout_marginTop="12dp"
        android:text="Olive oil, to grease 3 large Coles RSPCA approved chicken breast fillets 120g Coles Australian 4 leaf blend
2 mangoes, flesh thinly sliced 1 large red capsicum, thinly sliced 1/4 small red onion, thinly sliced 1/3 cup fresh passionfruit pulp 2 tsp lime juice
"

        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_03" />

    <TextView
        android:id="@+id/tv_06"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:layout_marginTop="24dp"
        android:text="Method"
        android:textColor="@android:color/holo_purple"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_04" />

    <TextView
        android:id="@+id/tv_07"
        android:layout_width="413dp"
        android:layout_height="219dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="Preheat a barbecue plate or char-grill on medium heat. Brush with oil to grease. Add the chicken and cook for 5 minutes each side or until cooked through.
Toss the salad leaves, mango, capsicum and onion on a large serving platter.
Season with salt and pepper. Combine the passionfruit pulp, oil and chilli in a small bowl Thickly slice the chicken.
Arrange on top of the salad. Scatter with the avocado. Drizzle over the dressing."
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_06" />

    <Button
        android:id="@+id/btn_back2"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_07"
        app:layout_constraintVertical_bias="0.719" />


</androidx.constraintlayout.widget.ConstraintLayout>